					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// 1. Parse the response body as JSON\r",
									"const responseData = pm.response.json();\r",
									"\r",
									"// 2. Check if the token exists in the response\r",
									"if (responseData && responseData.user.token) {\r",
									"    // 3. Store the token in an Environment Variable named 'authToken'\r",
									"    pm.environment.set(\"authToken\", responseData.user.token);\r",
									"\r",
									"    // Optional: Log it to the console for verification\r",
									"    console.log(\"Token stored: \" + responseData.token);\r",
									"} else {\r",
									"    console.log(\"Token not found in response.\");\r",
									"}"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
